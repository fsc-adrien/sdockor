{%- liquid
  assign section_heading = section.settings.section_heading | strip
  assign heading_position = section.settings.heading_position
  assign desktop_columns = section.settings.desktop_columns
  assign mobile_columns = section.settings.mobile_columns
  assign desktop_alignment = section.settings.desktop_content_alignment
  assign mobile_alignment = section.settings.mobile_content_alignment
  assign text_color = section.settings.text_color
  assign background_color = section.settings.background_color
  assign has_gradient = false
  if section.settings.background_gradient != blank
    assign background_color = section.settings.background_gradient
    assign has_gradient = true
  endif
  assign image_ratio_class = 'pxu-multicolumn__image--' | append: section.settings.image_ratio
  assign mobile_image_ratio_class = 'pxu-multicolumn__image--mobile-' | append: section.settings.mobile_image_ratio
  assign loading = 'lazy'
  assign fetch_priority = 'auto'
  if section.index <= 3
    assign loading = 'eager'
    assign fetch_priority = 'high'
  endif

  assign mobile_padding = 16  
  assign mobile_gap = 16     
  assign mobile_spacing = mobile_padding | times: 2
  if mobile_columns > 1
    assign gap_count = mobile_columns | minus: 1
    assign mobile_gap = mobile_gap | times: gap_count
    assign mobile_spacing = mobile_spacing | plus: mobile_gap
  endif

  assign desktop_padding = 24  
  assign desktop_gap = 32    
  assign desktop_spacing = desktop_padding | times: 2
  if desktop_columns > 1
    assign gap_count = desktop_columns | minus: 1
    assign desktop_gap = desktop_gap | times: gap_count
    assign desktop_spacing = desktop_spacing | plus: desktop_gap 
  endif

  assign desktop_image_size = ''
  if desktop_columns > 1
  assign desktop_image_size = 'calc((100vw - ' | append: desktop_spacing | append: 'px) / ' | append: desktop_columns | append: ')'
  elsif desktop_columns == 1
    assign desktop_image_size = '800px'
  endif

  assign mobile_image_size = 'calc((100vw - ' | append: mobile_spacing | append: 'px) / ' | append: mobile_columns | append: ')'
  assign image_sizes = '(min-width: 750px) ' | append: desktop_image_size | append: ', ' | append: mobile_image_size
  
  assign has_heading = false 
  if section_heading != blank
    assign has_heading = true
  endif
-%}

<section
  id="{{ section.id }}"
  class="
    pxu-section
    pxu-multicolumn
    pxu-multicolumn--{{ heading_position }}
    {% if has_heading != true and heading_position == 'inline' %}pxu-multicolumn--no-heading{% endif %}
    pxu-multicolumn--desktop-{{ desktop_alignment }}
    pxu-multicolumn--mobile-{{ mobile_alignment }}
    {% if has_gradient == true %}
      pxu-multicolumn--background-gradient
    {%- endif -%}
    {% if desktop_columns == 1 %}pxu-multicolumn--single-column{% endif %}
  "
  style="
    --pxu-desktop-columns: {{ desktop_columns }};
    --pxu-mobile-columns: {{ mobile_columns }};
    --pxu-section-heading-size: {{ section.settings.section_heading_size }}px;
    --pxu-section-heading-size-mobile: {{ section.settings.section_heading_size_mobile }}px;
    --pxu-section-text-color: {{ text_color }};
    --pxu-section-background-color: {{ background_color }};
    --pxu-block-heading-size: {{ section.settings.block_heading_size }}px;
    --pxu-block-heading-size-mobile: {{ section.settings.block_heading_size_mobile }}px;
    --pxu-block-text-size: {{ section.settings.block_text_size }}px;
    --pxu-block-text-size-mobile: {{ section.settings.block_text_size_mobile }}px;
    --pxu-section-padding-top: {{ section.settings.padding_top }}px;
    --pxu-section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --pxu-section-margin-top: {{ section.settings.margin_top }}px;
    --pxu-section-margin-bottom: {{ section.settings.margin_bottom }}px;
  "
>
  <script
    type="application/json"
    data-component-data
  >
    {
      "id": "{{ section.id }}",
      "handle": "pxu-multicolumn",
      "className": "MulticolumnSection",
      "name": "Multicolumn",
      "version": "1.0.0"
    }
  </script>

  <div class="pxu-section__container pxu-multicolumn__container">
    {%- if section_heading != blank -%}
      <h2 class="pxu-section__section-heading pxu-multicolumn__section-heading">
        {{- section_heading -}}
      </h2>
    {%- endif -%}

    <div class="pxu-multicolumn__grid">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'column' -%}
            {% liquid
              assign button_label = block.settings.button_label | escape
              assign button_url = block.settings.button_url
              assign button_style = block.settings.button_style
              assign button_text_color = block.settings.button_text_color
              assign button_background_color = block.settings.button_background_color
              assign button_brightness = button_background_color | color_brightness
              assign button_brightness_mod = 'light-on-dark'
              if button_brightness > 127.5
                assign button_brightness_mod = 'dark-on-light'
              endif
            %}
            <div class="pxu-multicolumn__column" {{ block.shopify_attributes }}>
              {%- if block.settings.image != blank -%}
                  <div class="pxu-multicolumn__image-wrapper {{ image_ratio_class }} {{ mobile_image_ratio_class }}">
                    {%- if block.settings.image_link != blank -%}
                      <a href="{{ block.settings.image_link }}" class="pxu-multicolumn__image-link">
                    {%- endif -%}
                      {{ 
                        block.settings.image |
                        image_url: width: 800 |
                        image_tag:
                          class: "pxu-multicolumn__image",
                          widths: "200,300,400,600,800",
                          sizes: image_sizes,
                          loading: loading,
                          fetchpriority: fetch_priority }}
                    {%- if block.settings.image_link != blank -%}
                      </a>
                    {%- endif -%}
                  </div>
              {%- endif -%}

              {%- if block.settings.heading != blank -%}
                <h3 class="pxu-multicolumn__block-heading pxu-heading">
                  {{- block.settings.heading | escape -}}
                </h3>
              {%- endif -%}

              {%- if block.settings.text != blank -%}
                <div class="pxu-multicolumn__text">
                  {{ block.settings.text }}
                </div>
              {%- endif -%}

              {%- if button_label != blank -%}
                <a
                  class="
                    pxu-multicolumn__button
                    pxu-btn
                    pxu-btn--{{ button_style }}
                    pxu-btn--{{ button_brightness_mod }}
                  "
                  style="
                    --pxu-btn-background-color: {{ button_background_color }};
                    --pxu-btn-text-color: {{ button_text_color }};
                  "
                  {% if button_url != blank %}
                    href="{{ button_url }}"
                  {% endif %}
                >
                  {{- button_label -}}
                </a>
              {%- endif -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</section>
